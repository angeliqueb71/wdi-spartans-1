<!DOCTYPE html>
<html>
  <head>
    <title>Pirate</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div id="notice">
        <%= flash[:notice]%>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div id="alert">
        <%= flash[:alert]%>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
