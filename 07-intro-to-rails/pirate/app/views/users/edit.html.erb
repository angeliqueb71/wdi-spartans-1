<%= render "errors" %>

<%= form_for @user do |form| %>
  <%= form.label :email %>
  <%= form.text_field :email %>
  <%= form.label :password %>
  <%= form.password_field :password %>
  <%= form.label :fname %>
  <%= form.text_field :fname %>
  <%= form.label :lname %>
  <%= form.text_field :lname %>
  <%= form.submit %>
<% end %>

